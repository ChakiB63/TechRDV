<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <left>
      <VBox alignment="CENTER" prefWidth="340.0" styleClass="vbox_background_left" stylesheets="@LoginPage.css" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="77.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../Desktop/S4/JavaAPI/LOGO.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <Label alignment="TOP_CENTER" prefHeight="350.0" prefWidth="276.0" text="Welcome ! Join us to schedule your doctor appointment and stay on top of your healthcare with a few clicks." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="Microsoft Tai Le Bold" size="16.0" />
               </font>
            </Label>
         </children></VBox>
   </left>
   <right>
      <Pane prefWidth="460.0" styleClass="pane_background_center" stylesheets="@LoginPage.css" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="91.0" layoutY="142.0" text="LOGIN" textFill="#000000a3">
               <font>
                  <Font name="Microsoft YaHei" size="13.0" />
               </font>
            </Label>
            <Label layoutX="91.0" layoutY="212.0" text="PASSWORD" textFill="#000000a3">
               <font>
                  <Font name="Microsoft YaHei" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="login" layoutX="91.0" layoutY="169.0" prefHeight="35.0" prefWidth="278.0" promptText="Enter Email " style="-fx-background-radius: 10;">
               <font>
                  <Font name="Microsoft YaHei Light" size="12.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" layoutX="91.0" layoutY="240.0" prefHeight="35.0" prefWidth="278.0" promptText="Enter Password " style="-fx-background-radius: 10;" />
            <Button fx:id="LoginButtton" layoutX="172.0" layoutY="300.0" mnemonicParsing="false" onAction="#LoginAction" prefHeight="31.0" prefWidth="130.0" style="-fx-background-radius: 30; -fx-background-color: #004AAD;" text="Log In" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="GoToSignUpButton" layoutX="316.0" layoutY="22.0" mnemonicParsing="false" onAction="#GoToSignUpPage" prefHeight="31.0" prefWidth="130.0" style="-fx-background-radius: 30; -fx-background-color: #0CC0DF;" text="Sign Up" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Label layoutX="182.0" layoutY="32.0" text="Don't have an account ?" underline="true">
               <font>
                  <Font name="Microsoft YaHei" size="11.0" />
               </font>
            </Label>
            <Label layoutX="185.0" layoutY="82.0" text="Login" textFill="#004aad">
               <font>
                  <Font name="Leelawadee UI Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </right>
